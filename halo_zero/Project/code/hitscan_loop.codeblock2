//Right facing
If HS_Direction > 0
    If Actor_X < HS_XOrigin
        Return
    End
Else
    //Left facing
    If Actor_X > HS_XOrigin
        Return
    End
End

//Too low
If HS_YOrigin > actor_y
    Return
End

If HS_YOrigin < actor_y - heights[actor_type]
    Return
End

Absolute DeltaX=Actor_X - HS_XOrigin
If DeltaX < HS_BestDistance
    Set HS_BestDistance=DeltaX
    Set HS_Success=True
    ActorAsNew self
End