Set ShieldDelay=100
If Shield < 0
    Set Health=Health + Shield
    GoSub refresh_ui
    Set Shield=0
End

If Health <= 0
    //Select the legs to destroy
    If new_type == masterchief_top
        NewAsNew parent
    End
    
    CameraFollow ! MaxCamera=0
    //We've been killed
    
    //Destroy the live master chief actor (and torso etc)
    NewType none
    Spawn corpse X=new_x Y=new_y
    NewAnimation masterchief_die Frame=0 AutoFlip
End