//Right facing
If HS_Direction > 0
    If Actor_X < HS_XOrigin
        Return
    End
ElseIf HS_Direction < 0
    //Left facing
    If Actor_X > HS_XOrigin
        Return
    End
End

Absolute DeltaX=Actor_X - HS_XOrigin
If DeltaX < HS_BestDistance
    Set HS_BestDistance=DeltaX
    Set HS_Success=True
    ActorAsNew self
End