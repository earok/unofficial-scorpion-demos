//Turret Appears
//Animation increases Var1
If actor_var1 == 0
    If actor_x <= camera_x+184
        GoSub 00_invisble_off
        ActorDirection look_left
    End
End

//Change to Active Turret
If actor_var1 == 1
    ActorDirection look_down
    GoSub 00_increase_var1
End

//Turret Disappears
If actor_var1 == 2
    If actor_x <= camera_x+24
        GoSub 00_update_on
        ActorDirection look_right
    End
End